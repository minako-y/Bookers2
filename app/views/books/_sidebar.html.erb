    <div class="col-md-3">
      <!--ユーザー情報-->
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image_id, :fill, 90, 90, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if user.id == current_user.id %>
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <%  else %>
          <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>
      <!--新規投稿-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion  %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>

    </div>